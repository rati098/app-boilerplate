{
  "name": "app-boilerplate",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "prettier --write \"**/*.{ts,tsx,md}\" && turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "husky": "^8.0.2"
  },
  "packageManager": "yarn@1.22.17",
  "husky": {
    "hooks": {
        "pre-commit": "yarn lint"
    }
}
}
